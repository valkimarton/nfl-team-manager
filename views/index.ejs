<%- include('header') -%>
<%- include('navbar') -%>

    <div class="container" style="height: 100%;  background-color:rgb(248, 248, 248); border: 2px solid grey; border-top: 2px solid white;">
        <div class="row justify-content-md-center">
            <div class="col-12 col-lg-10">
                <h1>Teams</h1>
                <table class="table table-striped table-bordered">
                    <% teams.forEach(function(team) { %>
                        <tr>
                            <td style="width:100px">
                                    <a href=<%= "/team/" + team._id %> ><img src=<%= team.image %> alt="ARI" width="70", height="50"></a>
                            </td>
                            <td>
                                    <a href=<%= "/team/" + team._id %> ><b> <%= team.name %> </b></a>
                            </td>
                            <td style="width:150px">
                                    <a href=<%= "/team/" + team._id %> class="btn btn-sm btn-secondary">Go to Team page</a>
                            </td>
                        </tr>
                    <% }); %>
                </table>
                <br/>
                <a href="/teams/new" class="btn btn-primary">Create Team</a>
            </div>
        </div>
    </div>

<%- include('footer') -%>