<%- include('header') -%>
<%- include('navbar') -%>

    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-10 col-lg-8">
                <a href=<%= "/team/edit/" + team.id %> class="btn btn-sm btn-primary" style="float: right; margin: 10px; font-size: 18px;">Edit</a>
                <h1><%= team.name %></h1>
                <br/>
                <form action="#">
                    <div class="form-group row">
                        <label for="estimated" readonly class="control-label col-sm-2"><b>Estimated</b></label>
                        <div class="col-sm-10">
                            <input type="number" readonly class="form-control-plaintext" id="estimated"  value=<%= team.estimated %>>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="owner" class="control-label col-sm-2"><b>Owner</b></label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" id="owner" value=<%= team.owner %>>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="coach" class="control-label col-sm-2"><b>Head coach</b></label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" id="coach" value=<%= team.coach %>>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col-10 col-lg-8">
                <br/><br/>
                <h5>Players</h5>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>
                            <b>Player name</b>
                        </th>
                        <th style="width:150px">
                            <b>Manage</b>
                        </th>
                    </tr>
                    <% players.forEach(function(player) { %>
                        <tr>
                            <td>
                                <a href=<%= "/player/" + player.id %> ><b><%= player.name %></b></a>
                            </td>
                            <td style="width:150px">
                                <a href=<%= "/player/" + player.id %> class="btn btn-sm btn-primary">View</a>
                                <a href="#" class="btn btn-sm btn-danger">Retire</a>
                            </td>
                        </tr>
                    <% }); %>
                </table>
                <br/>
                <a href=<%= "/player/" + team.id + "/new" %> class="btn btn-primary">New Player</a>
            </div>
        </div>  
    </div>

<%- include('footer') -%>