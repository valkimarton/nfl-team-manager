<%- include('header') -%>
<%- include('navbar') -%>

    <div class="container">
        <div class="row justify-content-md-center">
          <div class="col-12 col-lg-8">
            <h5> 
                <% if (typeof team === 'undefined') { %>
                    Create
                <% }else{ %>
                    Edit
                <% } %>
                 team
            </h5> <br/> <br/>
            <form action="/">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="text" class="form-control" id="name" placeholder="Enter team name">
                </div>
                <div class="form-group">
                  <label for="estimated">Estimated</label>
                  <input type="number" class="form-control" id="estimated" placeholder="">
                </div>
                <div class="form-group">
                    <label for="owner">Owner</label>
                    <input type="text" class="form-control" id="owner" placeholder="Enter owner name">
                </div>
                <div class="form-group">
                    <label for="coach">Head coach</label>
                    <input type="text" class="form-control" id="coach" placeholder="Enter head coach name">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>  
          </div>
        </div>
    </div>

<%- include('footer') -%>