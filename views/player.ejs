<%- include('header') -%>
<%- include('navbar') -%>

    <div class="container" style="height: 100%;  background-color:rgb(248, 248, 248); border: 2px solid grey">
        <div class="row justify-content-md-center">
            <div class="col-10 col-lg-8">
                    <img src=<%= player.image %> alt="Player Portrait" height="100" width="100" style="margin: 10px;">
            </div>
            <div class="col-10 col-lg-8">
                <a href=<%="/player/" + player._team + "/del/" + player._id %> class="btn btn-danger" style="float: right; margin: 10px;">Retire</a>
                <a href=<%="/player/" + player._team + "/edit/" + player._id %> class="btn btn-primary" style="float: right; margin: 10px;">Edit</a>
                <h1><%= player.name %></h1>
                <br/>
                <br/>
                <form action="#">
                    <div class="form-group row">
                        <label for="age" readonly class="control-label col-sm-3"><b>Age</b></label>
                        <label class="col-sm-9" id="age"><%= player.age %></label>
                    </div>
                    <div class="form-group row">
                        <label for="number" class="control-label col-sm-3"><b>Jersey number</b></label>
                        <label class="col-sm-9" id="number"><%= player.number %></label>
                    </div>
                    <div class="form-group row">
                        <label for="team" class="control-label col-sm-3"><b>Team</b></label>
                        <label class="col-sm-9" id="team"><a href="/team/<%= player._team %>"><%= team.name %></a></label>
                    </div>
                    <div class="form-group row">
                        <label for="position" class="control-label col-sm-3"><b>Position</b></label>
                        <label class="col-sm-9" id="position"><%= player.position %></label>
                    </div>
                    <div class="form-group row">
                        <label for="bio" class="control-label col-sm-3"><b>Bio</b></label>
                        <label class="col-sm-9" id="bio"><%= player.bio %></label>
                    </div>
                </form>
            </div>
        </div> 
    </div>

<%- include('footer') -%>